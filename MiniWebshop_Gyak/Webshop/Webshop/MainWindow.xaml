<Window x:Class="Webshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Webshop"
        mc:Ignorable="d"
        Title="Webshop" Height="600" Width="1050">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Termékek"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20 , 40, 20, 20"/>

        <TextBlock Text="Kategória:"
                   FontSize="15"
                   Margin="10,10,10,10"/>

        <ComboBox
                x:Name="cmbKategoria"
                Width="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                  Margin="80,10,10,10 "/>

        <CheckBox Content="Csak raktáron"
                  x:Name="Raktaron"
                  IsChecked="False"
                  Margin="290,10,10,10"
                  FontSize="15"/>

        <Button Content="Frissítés"
                Width="100"
                Height="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10,10,140,10" Click="Frissites_Click"/>

        <Button Content="Szűrés alkalmazása"
                Width="120"
                Height="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10,10,10,10" Click="Szures_Click"/>

        <DataGrid x:Name="Webshop" 
                  Grid.Column="0" 
                  Margin="20 , 80 , 20 , 10" 
                  AutoGenerateColumns="True"
                  SelectionChanged="Webshop_SelectionChanged"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
        </DataGrid>

        <StackPanel Margin="10"
                    Grid.Column="1"
                    VerticalAlignment="Stretch">
            <TextBlock Text="Szerkesztő"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20 , 40, 20, 20"/>

            <TextBlock Text="Név"
                   FontSize="15"
                   Margin="10 ,0, 20, 10"/>
            <TextBox x:Name="txtNev"
                     Margin="10, 0, 40, 10"
                     Height="25"/>

            <TextBlock Text="Ár"
                   FontSize="15"
                   Margin="10 ,0, 20, 10"/>
            <TextBox x:Name="txtAr"
                     Margin="10, 0, 40, 10"
                     Height="25"/>

            <TextBlock Text="Kategória"
                   FontSize="15"
                   Margin="10 ,0, 10, 0"/>

            <ComboBox
                    x:Name="cmbKategoria2"
                    Width="350"
                      Height="30"
                  Margin="0,5,10,0 "/>

            <CheckBox
                x:Name="Raktaron_2"
                Content="Raktáron"
                  IsChecked="False"
                  Margin="10,10,10,10"
                  FontSize="15" />
            <Button
                Content="Új hozzáadása"
                Width="350"
                Height="30"
                Margin="10,0,10,10" Click="Add_Click"/>
            <Button
                Content="Módosítás mentése"
                Width="350"
                Height="30"
                Margin="10,0,10,10" Click="Save_Click"/>
            <Button
                Content="Törlés"
                Width="350"
                Height="30"
                Margin="10,0,10,10" Click="Delete_Click"/>

        </StackPanel>



    </Grid>
</Window>
